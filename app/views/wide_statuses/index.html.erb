<p id="notice"><%= notice %></p>

<h1>Listing Wide Statuses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wide_statuses.each do |wide_status| %>
      <tr>
        <td><%= link_to 'Show', wide_status %></td>
        <td><%= link_to 'Edit', edit_wide_status_path(wide_status) %></td>
        <td><%= link_to 'Destroy', wide_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

